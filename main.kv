<MainGame>:
    player_ship: player_ship

    Ship:
        id: player_ship
        center_x: root.center_x
        center_y: self.height/2


<BallLabel>
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            color: .5, .5, .5, .5
            text: "40"



<Ship>:
    size: 50, 50

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size
            source: self.image

<Bullet>:
    size: 5, 5

    canvas:
        Ellipse:
            pos: self.pos
            size: self.size